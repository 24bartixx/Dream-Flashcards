<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.StudyFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/term_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="16dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/show_definition_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearance.MaterialComponents.Headline3"
                tools:text="Term"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/definition_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/term_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView
            android:id="@+id/definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            tools:text="Definition"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_definition_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="55dp"
        android:paddingVertical="20dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/button_round_style"
        android:text="@string/show_definition_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextAppearance.MaterialComponents.Headline5"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yes_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:paddingTop="12dp"
        android:background="@drawable/button_learn_round_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/medium_button"
        app:layout_constraintBottom_toBottomOf="@id/show_definition_button"
        app:layout_constraintTop_toTopOf="@id/show_definition_button"
        app:icon="@drawable/ic_yes"
        app:iconSize="50dp"
        app:iconGravity="top"
        app:backgroundTint="?attr/colorPrimary"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/medium_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:paddingTop="12dp"
        android:background="@drawable/button_learn_round_style"
        app:layout_constraintTop_toTopOf="@id/show_definition_button"
        app:layout_constraintBottom_toBottomOf="@id/show_definition_button"
        app:layout_constraintStart_toEndOf="@id/yes_button"
        app:layout_constraintEnd_toStartOf="@id/no_button"
        app:icon="@drawable/ic_medium"
        app:iconSize="50dp"
        app:iconGravity="top"
        app:backgroundTint="@color/yellow"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:paddingTop="12dp"
        android:background="@drawable/button_learn_round_style"
        app:layout_constraintTop_toTopOf="@id/show_definition_button"
        app:layout_constraintBottom_toBottomOf="@id/show_definition_button"
        app:layout_constraintStart_toEndOf="@id/medium_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon="@drawable/ic_no"
        app:iconSize="50dp"
        app:iconGravity="top"
        app:backgroundTint="@color/red"/>

</androidx.constraintlayout.widget.ConstraintLayout>