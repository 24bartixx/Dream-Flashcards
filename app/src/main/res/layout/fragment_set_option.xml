<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="setOptionFragment"
            type="com.example.dreamflashcards.fragments.SetOptionFragment"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".fragments.SetOptionFragment">

        <TextView
            android:id="@+id/set_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@id/choose_option_helper_text"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/HeadlineText"
            tools:text="Top Gun"/>

        <TextView
            android:id="@+id/choose_option_helper_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:textSize="22sp"
            android:text="@string/option_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/study_button"
            style="@style/TextAppearance.MaterialComponents.Body2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/study_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginHorizontal="6dp"
            android:textSize="20sp"
            android:text="@string/study_button_text"
            android:onClick="@{() -> setOptionFragment.studyFlashcards()}"
            app:icon="@drawable/ic_study"
            app:iconGravity="top"
            app:iconSize="30dp"
            app:iconPadding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/revise_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/AppButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/revise_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:textSize="20sp"
            android:text="@string/revise_button_text"
            android:onClick="@{() -> setOptionFragment.reviseFlashcards()}"
            app:icon="@drawable/ic_study"
            app:iconGravity="top"
            app:iconSize="30dp"
            app:iconPadding="4dp"
            app:layout_constraintStart_toEndOf="@id/study_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/study_button"
            app:layout_constraintBottom_toBottomOf="@id/study_button"
            style="@style/AppButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/modify_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="6dp"
            android:textSize="20sp"
            android:text="@string/modify_button_text"
            android:onClick="@{() -> setOptionFragment.modifyFlashcards()}"
            app:icon="@drawable/ic_modify"
            app:iconGravity="top"
            app:iconSize="30dp"
            app:iconPadding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            app:layout_constraintTop_toBottomOf="@id/study_button"
            style="@style/AppButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:text="@string/delete_button_text"
            android:onClick="@{() -> setOptionFragment.deleteFlashcards()}"
            app:icon="@drawable/ic_delete"
            app:iconGravity="top"
            app:iconSize="30dp"
            app:iconPadding="4dp"
            app:layout_constraintStart_toEndOf="@id/modify_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/revise_button"
            style="@style/AppButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>